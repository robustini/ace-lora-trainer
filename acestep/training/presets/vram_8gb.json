{
  "_description": "Minimal preset for GPUs with 8GB VRAM. Aggressive savings with 8-bit optimizer and encoder offloading.",
  "adapter_type": "lora",
  "optimizer_type": "adamw8bit",
  "scheduler_type": "cosine",
  "learning_rate": 1e-4,
  "batch_size": 1,
  "gradient_accumulation_steps": 8,
  "max_epochs": 100,
  "save_every_n_epochs": 25,
  "warmup_steps": 50,
  "max_grad_norm": 1.0,
  "gradient_checkpointing": true,
  "encoder_offloading": true,
  "torch_compile": false,
  "max_latent_length": 750,
  "lora_r": 16,
  "lora_alpha": 32,
  "lora_dropout": 0.1,
  "cfg_dropout_prob": 0.15,
  "loss_weighting": "none",
  "auto_save_best_after": 200,
  "attention_type": "both"
}
